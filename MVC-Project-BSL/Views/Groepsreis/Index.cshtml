@using System.Globalization
@model IEnumerable<MVC_Project_BSL.Models.Groepsreis>

<h1>Groepsreizen</h1>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Er zijn momenteel geen groepsreizen beschikbaar. <br />
        <a asp-action="Create" class="btn btn-primary">Voeg een nieuwe groepsreis toe</a>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Begindatum</th>
                <th>Einddatum</th>
                <th>Bestemming</th>
                <th>Prijs</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var groepsreis in Model)
            {
                <tr>
                    <td>@groepsreis.Begindatum.ToShortDateString()</td>
                    <td>@groepsreis.Einddatum.ToShortDateString()</td>
                    <td>@groepsreis.Bestemming?.BestemmingsNaam</td>
                    <td>@groepsreis.Prijs.ToString("C", new CultureInfo("nl-BE"))</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@groepsreis.Id">Bekijken</a> |
                        <a asp-action="Edit" asp-route-id="@groepsreis.Id">Bewerken</a> |

                        <!-- Verwijderknop die de modal activeert -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@groepsreis.Id">
                            Verwijderen
                        </button>

                        <!-- Bootstrap modal voor verwijderbevestiging -->
                        <div class="modal fade" id="deleteModal-@groepsreis.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Bevestig Verwijderen</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Weet je zeker dat je de groepsreis naar @groepsreis.Bestemming?.BestemmingsNaam wilt verwijderen?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" asp-route-id="@groepsreis.Id" method="post">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                                            <input type="submit" value="Verwijderen" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Create" class="btn btn-primary">Nieuwe Groepsreis</a>
    </p>
}
