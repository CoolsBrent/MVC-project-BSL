@model MVC_Project_BSL.Models.Groepsreis

<h1>Details van de Groepsreis</h1>

<div>
    <h4>Groepsreis</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Begindatum</dt>
        <dd class="col-sm-10">@Model.Begindatum.ToString("dd-MM-yyyy HH:mm")</dd>

        <dt class="col-sm-2">Einddatum</dt>
        <dd class="col-sm-10">@Model.Einddatum.ToString("dd-MM-yyyy HH:mm")</dd>

        <dt class="col-sm-2">Prijs</dt>
        <dd class="col-sm-10">@Model.Prijs.ToString("C")</dd>

        <dt class="col-sm-2">Leeftijdscategorie</dt>
        <dd class="col-sm-10">@Model.Bestemming?.MinLeeftijd - @Model.Bestemming?.MaxLeeftijd</dd>

        <dt class="col-sm-2">Bestemming</dt>
        <dd class="col-sm-10">@Model.Bestemming?.BestemmingsNaam</dd>

        <dt class="col-sm-2">Beschrijving</dt>
        <dd class="col-sm-10">@Model.Bestemming?.Beschrijving</dd>

        <dt class="col-sm-2">Aantal Deelnemers</dt>
        <dd class="col-sm-10">@Model.Kinderen.Count()</dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-6">
<h2>Ingeschreven Monitoren</h2>

        @if (Model.Monitoren.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Naam</th>
                        <th>Hoofdmonitor</th> <!-- Voeg een kolom toe voor hoofdmonitor -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var monitor in Model.Monitoren)
                    {
                        <tr>
                            <td>@monitor.Persoon?.Voornaam @monitor.Persoon?.Naam</td> <!-- Zorg ervoor dat Persoon correct is ingesteld -->
                            <td>@(monitor.IsHoofdMonitor ? "Ja" : "Nee")</td> <!-- Toon of het een hoofdmonitor is -->
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                Geen monitoren geregistreerd voor deze groepsreis.
            </div>
        }
    </div>

    <div class="col-md-6">
        <h2>Beschikbare Monitoren</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Naam</th>
                    <th>Hoofdmonitor</th> <!-- Voeg een kolom toe voor hoofdmonitor -->
                </tr>
            </thead>
            <tbody>
                @foreach (var monitor in Model.BeschikbareMonitoren)
                {
                    <tr>
                        <td>@monitor.Persoon?.Voornaam @monitor.Persoon?.Naam</td> <!-- Zorg ervoor dat Persoon correct is ingesteld -->
                        <td>@(monitor.IsHoofdMonitor ? "Ja" : "Nee")</td> <!-- Toon of het een hoofdmonitor is -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<h2>Deelnemers</h2>
@if (Model.Kinderen.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Leeftijd</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kind in Model.Kinderen)
            {
                // Bereken de leeftijd
                var geboortedatum = kind.Geboortedatum;
                var leeftijd = DateTime.Now.Year - geboortedatum.Year;
                if (DateTime.Now < geboortedatum.AddYears(leeftijd)) leeftijd--;

                <tr>
                    <td>@kind.Voornaam @kind.Naam</td>
                    <td>@leeftijd jaar</td> <!-- Toon de berekende leeftijd -->
                   
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        Geen deelnemers geregistreerd voor deze groepsreis.
    </div>
}

<p>
    <a asp-action="Index" class="btn btn-primary">Terug naar Lijst</a>
</p>
