@model List<Onkosten>

@{
    ViewData["Title"] = "Onkosten Overzicht";
    var groepsreisNaam = ViewBag.GroepsreisNaam ?? "Onbekende Groepsreis";
}

<h1>Onkosten Overzicht voor: @groepsreisNaam</h1>
<p>
    <a asp-action="Create" asp-route-groepsreisId="@ViewBag.GroepsreisId" class="btn btn-primary" data-bs-toggle="tooltip" title="Nieuwe Onkost Toevoegen">
        <i class="bi bi-plus-circle h4 text-white"></i>
    </a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
          
            <th>Omschrijving</th>
            <th>Bedrag</th>
            <th>Datum</th>
            <th>Foto</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
           
            foreach (var onkost in Model)
            {
                <tr>
                    
                    <td>@Html.DisplayFor(modelItem => onkost.Omschrijving)</td>
                    <td>€ @Html.DisplayFor(modelItem => onkost.Bedrag)</td>
                    <td>@Html.DisplayFor(modelItem => onkost.Datum)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(onkost.Foto))
                        {
                            <img src="@onkost.Foto" alt="Foto van de onkost" style="max-width: 100px;" />
                        }
                        else
                        {
                            <span>Geen foto</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@onkost.Id" class="btn btn-primary me-1" data-bs-toggle="tooltip" title="Details">
                            <i class="bi bi-eye h5 text-white"></i>
                        </a> <a asp-action="Edit" asp-route-id="@onkost.Id" class="btn btn-secondary me-1" data-bs-toggle="tooltip" title="Bewerken">
                            <i class="bi bi-pencil-square h5"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@onkost.Id" class="btn btn-danger" data-bs-toggle="tooltip" title="Verwijderen">
                            <i class="bi bi-trash h5"></i>
                        </a>
                    </td>
                </tr>
                
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Geen onkosten gevonden.</td>
            </tr>
        }
    </tbody>
</table>


<a href="@Url.Action("Index", "Groepsreis")" class="btn btn-secondary">Terug naar overzicht</a>

